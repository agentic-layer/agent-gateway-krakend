{
  "request": {
    "method": "POST",
    "urlPathPattern": ".*",
    "headers": {
      "Content-Type": {
        "contains": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.jsonrpc"
      },
      {
        "matchesJsonPath": "$.method"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "jsonrpc": "2.0",
      "id": "{{jsonPath request.body '$.id'}}",
      "result": {
        "message": {
          "role": "assistant",
          "parts": [
            {
              "kind": "text",
              "text": "Echo: {{jsonPath request.body '$.params.message.parts[0].text'}}"
            }
          ],
          "messageId": "response-{{randomValue type='UUID'}}",
          "contextId": "{{jsonPath request.body '$.params.message.contextId'}}"
        }
      }
    },
    "transformers": ["response-template"]
  }
}
