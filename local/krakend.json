{
  "$schema": "https://www.krakend.io/schema/v2.10/krakend.json",
  "version": 3,
  "plugin": {
    "pattern": ".so",
    "folder": "/unleash/tentacles/"
  },
  "port": 10000,
  "extra_config": {
    "plugin/http-server": {
      "@comment_name": "Name order defines handler order. Last entry is outermost/first handler.",
      "name": [
        "openai-a2a", "agentcard-rw"
      ]
    },
    "router": {
      "disable_access_log": false,
      "hide_version_header": true
    }
  },
  "timeout": "360s",
  "output_encoding": "json",
  "name": "agent-gateway-krakend",
  "endpoints": [
    {
      "endpoint": "/weather-agent/.well-known/agent-card.json",
      "output_encoding": "no-op",
      "method": "GET",
      "backend": [
        {
          "host": [
            "http://host.docker.internal:8000"
          ],
          "url_pattern": "/.well-known/agent-card.json"
        }
      ]
    },
    {
      "endpoint": "/weather-agent",
      "output_encoding": "no-op",
      "method": "POST",
      "backend": [
        {
          "host": [
            "http://host.docker.internal:8000"
          ],
          "url_pattern": ""
        }
      ]
    },
    {
      "endpoint": "/mock-agent/.well-known/agent-card.json",
      "output_encoding": "no-op",
      "method": "GET",
      "backend": [
        {
          "host": [
            "http://host.docker.internal:8080"
          ],
          "url_pattern": "/.well-known/agent-card.json"
        }
      ]
    },
    {
      "endpoint": "/mock-agent",
      "output_encoding": "no-op",
      "method": "POST",
      "backend": [
        {
          "host": [
            "http://host.docker.internal:8080"
          ],
          "url_pattern": ""
        }
      ]
    }
  ]
}